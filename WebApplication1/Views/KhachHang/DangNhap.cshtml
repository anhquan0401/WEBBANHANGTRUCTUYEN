@model WebApplication1.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng Nhập";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Đăng nhập</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Register</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Login start -->
@* enctype="multipart/form-data": có cái này mới lấy được hình hi up ảnh *@
<div class="container-fluid py-5">
    <div style="background: url('../img/hero-img.jpg') !important;">
        <div class="d-flex justify-content-center" style="margin-left:500px;">
            <img src="https://media.dau.edu.vn/Media/2_SVDAU/Images/dau-csv12982278-5-e.png">
        </div>
        <div class="container py-5">
            <h1 class="mb-4 d-flex justify-content-center" style="margin-left:500px;">Đăng Nhập</h1>
            <form asp-action="DangNhap" asp-controller="KhachHang" enctype="multipart/form-data">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="text-danger"></div>
                <div class="row g-5 justify-content-end">
                    <div class="col-md-12 col-lg-6 col-xl-7">
                        <div class="row">
                            <div class="col-md-12 col-lg-6">
                                <div class="form-item w-100">
                                    <label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
                                    <input asp-for="@Model.Username" type="text" class="form-control">
                                    <span class="text-danger" asp-validation-for="@Model.Username"></span>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-6">
                                <div class="form-item w-100">
                                    <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                                    <input asp-for="@Model.MatKhau" type="password" class="form-control">
                                    <span class="text-danger" asp-validation-for="@Model.MatKhau"></span>
                                </div>
                            </div>
                        </div>
                        <div style="margin-top: 50px;">
                            <a asp-action="QuenMatKhau" asp-controller="KhachHang">Quên mật khẩu</a>
                        </div>
                        <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng nhập</button>
                        </div>
                        <div class="d-flex justify-content-center text-center" style="margin-top:50px;">
                            <div class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">
                                <a asp-action="DangKy" asp-controller="KhachHang" asp-route-ReturnURL="@ViewBag.ReturnURL" class="mb-4">Đăng Kí</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Login end -->
