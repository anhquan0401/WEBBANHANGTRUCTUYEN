@model IEnumerable<WebApplication1.ViewModels.LichSuHoaDonVM>

@{
    ViewData["Title"] = "Lịch sử đặt hàng";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Lịch Sử đặt hàng</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Lịch sử đặt hàng</li>
    </ol>
</div>
<!-- Single Page Header End -->
@foreach (var hoaDon in Model)
{
    <div class="container mt-5" style="width: 500px;">
        <div class="card" style="margin-bottom: 35px;">
            <div class="card-header">
                <h3 class="card-title" style="text-align:center; margin-top: 10px;">Đơn mua</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">Mã hóa đơn: @hoaDon.MaHd</h5>
                <a asp-action="Details" asp-route-id="@hoaDon.MaHd" class="btn btn-primary">Xem chi tiết</a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Tên hàng hóa</th>
                <th scope="col">Hình</th>
                <th scope="col">Số lượng</th>
                <th scope="col">Đơn giá</th>
                <th scope="col">Giảm giá</th>
                <th scope="col">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chiTiet in hoaDon.ChiTietHds)
            {
                <tr>
                    <td>
                        <p class="mb-0 mt-4">@chiTiet.TenHh</p>
                    </td>
                    <th scope="row">
                        <div class="d-flex align-items-center">
                            <img src="~/Hinh/HangHoa/@chiTiet.Hinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                        </div>
                    </th>
                    <td>
                        <p class="mb-0 mt-4">@chiTiet.SoLuong</p>
                    </td>
                    <td>
                        <p class="mb-0 mt-4">@chiTiet.DonGia.ToString("#,##").Replace(',', '.')$</p>
                    </td>
                    <td>
                        <p class="mb-0 mt-4">@chiTiet.GiamGia.ToString("C")</p>
                    </td>
                    <td>
                        <p class="mb-0 mt-4">@chiTiet.ThanhTien.ToString("#,##").Replace(',', '.')$</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
