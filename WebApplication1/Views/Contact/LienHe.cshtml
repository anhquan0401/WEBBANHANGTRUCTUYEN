@model WebApplication1.ViewModels.ContactVM
@{
    ViewData["Title"] = "Liên hệ";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5" style="background: url('../img/b1.jpg') !important;">
    <h1 class="text-center text-white display-6">Liên hệ</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Contact</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Get in touch</h1>
                        <p class="mb-4">The contact form is currently inactive. Get a functional and working contact form with Ajax & PHP in a few minutes. Just copy and paste the files, add a little code and you're done. <a href="https://htmlcodex.com/contact-form">Download Now</a>.</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3834.4623842009923!2d108.24235197497939!3d16.041478084634026!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142176734da7123%3A0xc6242f210df4c7a9!2zVHLhuqduIFbEg24gRMawLCBN4bu5IEFuLCBOZ8WpIEjDoG5oIFPGoW4sIMSQw6AgTuG6tW5nIDU1MDAwMCwgVmlldG5hbQ!5e0!3m2!1sen!2sbd!4v1713588168297!5m2!1sen!2sbd" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <form asp-controller="Contact" asp-action="LienHe" style="width:700px !important">
                    <div class="col-lg-7" style="width:80% !important">
                            <input asp-for="@Model.HoTen" type="text" class="w-100 form-control border-0 py-3 mb-4" placeholder="Họ và tên">
                            <input asp-for="@Model.Email" type="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Email">
                            <input asp-for="@Model.Phone" type="text" class="w-100 form-control border-0 py-3 mb-4" placeholder="Số điện thoại">
                            <textarea asp-for="@Model.Content" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Nội dung"></textarea>
                            <button type="submit" class="w-100 btn form-control border-secondary py-3 bg-white text-primary">Send</button>
                    </div>
                </form>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Address</h4>
                            <p class="mb-2">K40/05 Trần Văn Dư Đà Nẵng</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Mail Us</h4>
                            <p class="mb-2">tranleanhquan@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Telephone</h4>
                            <p class="mb-2">0888298168</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
