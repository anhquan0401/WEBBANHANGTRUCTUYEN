@model WebApplication1.ViewModels.ProFileVM
@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Hồ sơ cá nhân</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">ProFile</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container mt-5" style="width: 1000px;">
    <div class="card" style="margin-bottom: 35px;">
        <div class="card-header">
            <h3 class="card-title" style="text-align:center; margin-top: 10px;">Thông Tin Cá Nhân</h3>
        </div>
        <div class="card-body">
            <div class="d-flex align-items-center">
                <img src="~/Hinh/KhachHang/@Model.FileHinh" class="img-fluid me-5 rounded-circle" style="width: 150px; height: 150px;" alt="">
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-title">Tên đăng nhập: @Model.MaKh</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">Họ và tên: @Model.HoTen</h5>
        </div>
        @if (Model.GioiTinh == true)
        {
            <div class="card-body">
                <h5 class="card-title">Giới tính: Nam</h5>
            </div>
        }
        else
        {
            <div class="card-body">
                <h5 class="card-title">Giới tính: Nữ</h5>
            </div>
        }
        <div class="card-body">
            <h5 class="card-title">Ngày sinh: @Model.NgaySinh</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">Địa chỉ: @Model.DiaChi</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">Điện thoại: @Model.DienThoai</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">Email: @Model.Email</h5>
        </div>

    </div>
    <a asp-action="editFrofile" asp-route-id="@Model.MaKh" class="btn btn-primary">Chỉnh sửa thông tin</a>
</div>




